<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group mb-2">
                  <%= f.email_field :email, placeholder: 'E-mail', autofocus: true, autocomplete: "email", class: 'form-control' %>
                </div>

                <div class="form-group mb-2">
                  <%= f.password_field :password, placeholder: 'Senha', autocomplete: "off", class: 'form-control' %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="form-group mbn">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, 'Manter Conectado', class: "pls" %>
                  </div>
                <% end -%>

                <div class="d-flex align-items-center justify-content-end mt-4 mb-0">
                  <%= f.submit "Log in", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
